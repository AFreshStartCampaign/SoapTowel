<section id="home-slider">
  <div id="slider" class="sl-slider-wrapper">
    <div class="sl-slider">
      <div class="sl-slide" data-orientation="horizontal" data-slice1-rotation="-25" data-slice2-rotation="-25" data-slice1-scale="2" data-slice2-scale="2">
        <div class="bg-img bg-img-1"></div>
        <div class="slide-caption">
          <div class="caption-content">
              <h2 class="animated fadeInDown">A Fresh Start</h2>
              <span class="animated fadeInDown">Soap & Towel Campaign</span>
              <a href="#" class="btn btn-blue btn-effect">Join US</a>
          </div>
        </div>
        </div>
        <div class="sl-slide" data-orientation="vertical" data-slice1-rotation="10" data-slice2-rotation="-15" data-slice1-scale="1.5" data-slice2-scale="1.5">
          <div class="bg-img bg-img-2"></div>
          <div class="slide-caption">
          <div class="caption-content">
              <h2>A Fresh Start</h2>
              <span>Soap & Towel Campaign</span>
              <a href="#" class="btn btn-blue btn-effect">Join US</a>
          </div>
        </div>
      </div>
      <div class="sl-slide" data-orientation="horizontal" data-slice1-rotation="3" data-slice2-rotation="3" data-slice1-scale="2" data-slice2-scale="1">
        <div class="bg-img bg-img-3"></div>
        <div class="slide-caption">
        <div class="caption-content">
            <h2>A Fresh Start</h2>
            <span>Soap & Towel Campaign</span>
            <a href="#" class="btn btn-blue btn-effect">Join US</a>
        </div>
      </div>
      </div>
    </div>
  </div><!-- /slider-wrapper -->
</section>

<div class="container">
  <div class="jumbotron">
    <h1>Hello World!</h1>
    {{#if user}}
      <p>Welcome, {{user.fullName}}</p>
      <p><a href="edit_profile" class="small">Edit my profile</a></p>
      <p><a href="edit_organization" class="small">Edit organization profile</a></p>
      <p><a href="edit_charity" class="small">Edit charity profile</a></p><a href="/logout" class="btn btn-primary">Logout</a>
    {{else}}
      <p>Welcome to A Fresh Start, ready to get started?</p>
      <p><a href="/login" class="btn btn-primary">Login now</a></p>
      <p><span class="small">Don't have an account?</span><span>&nbsp;</span><a href="/register" class="small">Register now</a></p>
    {{/if}}
  </div>
</div>