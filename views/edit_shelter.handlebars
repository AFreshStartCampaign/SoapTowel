    <div class="form-group"><label class="col-sm-4">Shelter Description</label>
      <div class="col-sm-8"><textarea required name="bio" type="text" class="form-control">{{bio}}</textarea></div>
    </div>
    <div class="form-group"><label class="col-sm-4">Shelter Logo</label>
      <div class="col-sm-8">
        <span class="avatar"><img src="{{avatarUrl}}" alt="{{name}}"></span>
        <input type="file" name="avatar" onchange="handleAvatar(this.files)">
      </div>
    </div>
