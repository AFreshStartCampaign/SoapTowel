<div class="container">
  <span id="data" shelterId="{{_id}}" style="display: none;"></span>
  <div class="page-header row">
    <h1>Edit Shelter</h1>
  </div>
  <div id="fieldsRequired" class="status alert alert-warning" style="display: none;"> All fields are required. </div>
  <div id="invalidEmail" class="status alert alert-warning" style="display: none;"> Please enter a valid email. </div>
  <div id="saved" class="status alert alert-success" style="display: none;"> Your profile has been saved. </div>
  <form role="form" class="login-form form-horizontal">
    <div class="form-group"><label class="col-sm-4">Shelter Name</label>
      <div class="col-sm-8"><input placeholder="Homeless Shelter Name" required name="name" type="text" value="{{name}}" class="form-control"></div>
    </div>
    <div class="form-group"><label class="col-sm-4">Street Address</label>
      <div class="col-sm-8"><input placeholder="e.g. 123 Sunny Ave." required name="address-street" type="text" value="{{address.street}}" class="form-control"></div>
    </div>
    <div class="form-group"><label class="col-sm-4">City</label>
      <div class="col-sm-8"><input placeholder="e.g. City" required name="address-city" type="text" value="{{address.city}}" class="form-control"></div>
    </div>
    <div class="form-group"><label class="col-sm-4">State</label>
      <div class="col-sm-8"><input placeholder="e.g. CA" required name="address-state" type="text" value="{{address.state}}" class="form-control"></div>
    </div>
    <div class="form-group"><label class="col-sm-4">ZIP</label>
      <div class="col-sm-8"><input placeholder="e.g. 94116" required name="address-zip" type="text" value="{{address.zip}}" class="form-control"></div>
    </div>
    <div class="form-group"><label class="col-sm-4">Phone</label>
      <div class="col-sm-8"><input placeholder="e.g. 123-234-3455" required name="phone" type="text" value="{{phone}}" class="form-control"></div>
    </div>
    <div class="form-group"><label class="col-sm-4">Website</label>
      <div class="col-sm-8"><input placeholder="e.g. http://mysite.com" required name="websiteUrl" type="text" value="{{websiteUrl}}" class="form-control"></div>
    </div>
    <div class="form-group"><label class="col-sm-4">Twitter Url</label>
      <div class="col-sm-8"><input placeholder="e.g. http://twitter.com/myusername" required name="twitterUrl" type="text" value="{{twitterUrl}}" class="form-control"></div>
    </div>
    <div class="form-group"><label class="col-sm-4">Facebook Url</label>
      <div class="col-sm-8"><input placeholder="e.g. http://www.facebook.com/mypage" required name="facebookUrl" type="text" value="{{facebookUrl}}" class="form-control"></div>
    </div>
    <div class="form-group"><label class="col-sm-4">Contact Email</label>
      <div class="col-sm-8"><input placeholder="e.g. contact@mysite.com" required name="email" type="text" value="{{email}}" class="form-control"></div>
    </div>
